<UserControl x:Class="Dormitory_System.Views.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dormitory_System.Views"
             xmlns:vm="clr-namespace:Dormitory_System.ViewModels"
             xmlns:converters="clr-namespace:Dormitory_System.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:VisibilityRoleConverter x:Key="VisibilityRoleConverter"/>
    </UserControl.Resources>
    <Grid>
        <!-- Заголовок -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель (Информация и управление) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightBlue" Margin="0,0,0,10">
            <TextBlock Text="Студент: Мои данные и операции" FontSize="16" FontWeight="Bold" Margin="10,5,20,5"/>
            <TextBlock Text="{Binding CurrentUser.Username}" FontSize="14" Margin="0,0,20,0"/>
            <Button Content="Выход" Command="{Binding LogoutCommand}" Width="80" Height="25" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Основная область (Вкладки для разных функций) -->
        <TabControl Grid.Row="1">
            <!-- Вкладка "Мои данные" -->
            <TabItem Header="Мои данные">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Форма для отображения данных студента -->
                    <Grid Grid.Row="0" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Text="{Binding Student.FullName}" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True"/>

                        <TextBlock Text="Паспорт:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Text="{Binding Student.PassportData}" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True"/>

                        <TextBlock Text="Факультет:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Text="{Binding Student.DepartmentName}" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True"/>

                        <TextBlock Text="Курс:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Text="{Binding Student.Course}" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True"/>

                        <TextBlock Text="Контактный телефон:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Text="{Binding Student.ContactPhone}" Grid.Row="4" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="False"/>

                        <Button Content="Сохранить изменения" Command="{Binding SaveStudentInfoCommand}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Вкладка "Оплата проживания" -->
            <TabItem Header="Оплата проживания">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120*"/>
                        <ColumnDefinition Width="277*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель отображения текущего баланса -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGreen" Margin="10,10,10,266" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock Text="Текущий баланс: " FontSize="14" FontWeight="Bold" Margin="10,5,10,5"/>
                        <TextBlock Text="{Binding CurrentBalance, StringFormat={}{0:C}}" FontSize="14" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Text="Статус: " FontSize="14" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Text="{Binding PaymentStatus}" FontSize="14" FontWeight="Bold" Margin="0,5,10,5"/>
                    </StackPanel>

                    <!-- Таблица платежей -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Payments}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="10,10,10,10" AlternatingRowBackground="LightGray" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PaymentId}" Width="Auto"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding PaymentDate, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={} {0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Назначение" Binding="{Binding Purpose}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель навигации -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="63,10,0,10" Grid.Column="1">
                        <Button Content="Предыдущая" Command="{Binding PreviousPaymentPageCommand}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding CurrentPaymentPage, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotalPaymentPages, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <Button Content="Следующая" Command="{Binding NextPaymentPageCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка "Заявки на ремонт" -->
            <TabItem Header="Заявки на ремонт">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="757*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель создания новой заявки -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightYellow" Margin="10,10,10,10" Grid.ColumnSpan="2">
                        <TextBlock Text="Описание проблемы: " VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox x:Name="NewApplicationDescription" Width="300" Margin="0,5,10,5"
                                 Text="{Binding NewApplicationDescription, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Создать заявку" Command="{Binding CreateApplicationCommand}" Margin="0,5,0,5"/>
                    </StackPanel>

                    <!-- Таблица заявок -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Applications}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="10,10,10,10" AlternatingRowBackground="LightGray" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ApplicationId}" Width="Auto"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding ReportDate, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Комната" Binding="{Binding RoomNumber}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель навигации -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="273,10,0,10" Grid.Column="1">
                        <Button Content="Предыдущая" Command="{Binding PreviousApplicationPageCommand}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding CurrentApplicationPage, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotalApplicationPages, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <Button Content="Следующая" Command="{Binding NextApplicationPageCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка "Журнал посещений" -->
            <TabItem Header="Журнал посещений">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель добавления нового посещения -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightYellow" Margin="10,10,10,10">
                        <TextBlock Text="Имя гостя: " VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox x:Name="GuestNameTextBox" Width="200" Margin="0,5,10,5"
                                 Text="{Binding GuestName, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Время прибытия: " VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <DatePicker x:Name="TimeInDatePicker" SelectedDate="{Binding TodayDate}" Margin="0,5,10,5"/>
                        <Button Content="Зарегистрировать посещение" Command="{Binding RegisterVisitCommand}" Margin="0,5,0,5"/>
                    </StackPanel>

                    <!-- Таблица посещений -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Visits}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="10" AlternatingRowBackground="LightGray">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding VisitId}" Width="Auto"/>
                            <DataGridTextColumn Header="Гость" Binding="{Binding GuestName}" Width="150"/>
                            <DataGridTextColumn Header="Дата прибытия" Binding="{Binding TimeIn, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Время прибытия" Binding="{Binding TimeIn, StringFormat=t}" Width="100"/>
                            <DataGridTextColumn Header="Дата убытия" Binding="{Binding TimeOut, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Время убытия" Binding="{Binding TimeOut, StringFormat=t}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель навигации -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Предыдущая" Command="{Binding PreviousVisitPageCommand}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding CurrentVisitPage, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotalVisitPages, StringFormat={}{0}}" Margin="0,0,10,0"/>
                        <Button Content="Следующая" Command="{Binding NextVisitPageCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Нижняя панель (Статус) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="LightGray" Margin="0,10,0,0">
            <TextBlock Text="Статус: Готово" FontSize="12" Margin="10,5,0,5"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Margin="0,5,0,5"/>
        </StackPanel>
    </Grid>
</UserControl>
