<UserControl x:Class="Dormitory_System.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dormitory_System.Views"
             xmlns:vm="clr-namespace:Dormitory_System.ViewModels"
             xmlns:converters="clr-namespace:Dormitory_System.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Ресурсы для конвертеров -->
        <converters:VisibilityRoleConverter x:Key="VisibilityRoleConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- Заголовок -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель (Информация и управление) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightBlue" Margin="0,0,0,10">
            <TextBlock Text="Администратор: Управление системой" FontSize="16" FontWeight="Bold" Margin="10,5,20,5"/>
            <TextBlock Text="{Binding CurrentUser.Username}" FontSize="14" Margin="0,0,20,0"/>
            <Button Content="Выход" Command="{Binding LogoutCommand}" Width="80" Height="25" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Основная область (Вкладки для разных функций) -->
        <TabControl Grid.Row="1">
            <!-- Вкладка "Пользователи" (только для Админа) -->
            <TabItem Header="Управление пользователями">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска и фильтрации -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10">
                        <TextBlock Text="Поиск: " VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchTextBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="5,0,10,0"/>
                        <Button Content="Добавить пользователя" Command="{Binding AddUserCommand}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Таблица пользователей -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" AutoGenerateColumns="False" 
                              SelectedItem="{Binding SelectedUser}" SelectionMode="Single" 
                              IsReadOnly="True" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="Auto"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="120"/>
                            <DataGridTextColumn Header="Активен" Binding="{Binding IsActive}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Да"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Text" Value="Нет"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Действия" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Редактировать" Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Margin="0,0,5,0"/>
                                            <Button Content="Удалить" Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" 
                                                    Visibility="{Binding CurrentUser.RoleName, Converter={StaticResource VisibilityRoleConverter}, ConverterParameter=Администратор}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель навигации -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Предыдущая" Command="{Binding PreviousPageCommand}" Margin="0,0,10,0"/>
                        <!--<TextBlock Text="{Binding CurrentPage}{Binding TotalPages}" Margin="0,0,10,0"/>-->
                        <Button Content="Следующая" Command="{Binding NextPageCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка "База данных" (только для Админа) -->
            <TabItem Header="Управление БД">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления резервным копированием -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10">
                        <Button Content="Создать резервную копию" Command="{Binding BackupDatabaseCommand}" Margin="0,0,10,0"/>
                        <Button Content="Восстановить из резервной копии" Command="{Binding RestoreDatabaseCommand}" Margin="0,0,10,0"/>
                        <Button Content="Просмотреть журнал" Command="{Binding ShowLogCommand}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Область для сложных запросов (только для Админа) -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Сложные запросы (SQL):" FontWeight="Bold" Margin="10,0,0,10"/>
                        <TextBox Grid.Row="1" AcceptsReturn="True" Text="{Binding CustomSqlQuery}" VerticalScrollBarVisibility="Auto" Margin="10" MinHeight="100"/>
                        <Button Grid.Row="2" Content="Выполнить запрос" Command="{Binding ExecuteQueryCommand}" HorizontalAlignment="Right" Margin="10,10,10,0"/>
                    </Grid>

                    <!-- Результат выполнения запроса -->
                    <DataGrid Grid.Row="2" ItemsSource="{Binding QueryResult}" AutoGenerateColumns="True" Margin="10" 
                              Visibility="{Binding HasQueryResult, Converter={StaticResource BoolToVisibilityConverter}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Результат" Binding="{Binding}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка "Отчеты" -->
            <TabItem Header="Отчеты">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="197*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="549*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель выбора отчета -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="4">
                        <TextBlock Text="Выберите отчет: " VerticalAlignment="Center"/>
                        <ComboBox x:Name="ReportTypeComboBox" SelectedIndex="0" Width="200" Margin="5,0,10,0">
                            <ComboBoxItem Content="Список пользователей"/>
                            <ComboBoxItem Content="Список комнат"/>
                            <ComboBoxItem Content="Отчет по заселению"/>
                        </ComboBox>
                        <Button Content="Сформировать отчет" Command="{Binding GenerateReportCommand}" Margin="10,0,0,0"/>
                        <Button Content="Сохранить в Word" Command="{Binding SaveToWordCommand}" Margin="0,0,0,0"/>
                    </StackPanel>

                    <!-- Область для отображения отчета -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ReportData}" AutoGenerateColumns="True" Margin="10,10,10,10" Grid.ColumnSpan="4"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Нижняя панель (Статус) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="LightGray" Margin="0,10,0,0">
            <TextBlock Text="Статус: Готово" FontSize="12" Margin="10,5,0,5"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Margin="0,5,0,5"/>
        </StackPanel>
    </Grid>
</UserControl>
